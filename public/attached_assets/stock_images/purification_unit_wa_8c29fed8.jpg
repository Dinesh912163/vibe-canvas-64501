  <rect x="560" y="660" width="50" height="70" fill="#8D6E63"/>
  <rect x="565" y="665" width="40" height="60" fill="#fff"/>
  <rect x="568" y="670" width="34" height="3" fill="#000"/>
  <rect x="568" y="678" width="30" height="3" fill="#000"/>
  <rect x="568" y="686" width="28" height="3" fill="#000"/>

