  <rect x="100" y="580" width="200" height="150" fill="#37474F" rx="5"/>
  <rect x="110" y="590" width="180" height="100" fill="#1a237e"/>

  <!-- Display readings -->
  <text x="200" y="620" font-family="monospace" font-size="14" fill="#4CAF50" text-anchor="middle">Purity: 98.5%</text>
  <text x="200" y="645" font-family="monospace" font-size="14" fill="#4CAF50" text-anchor="middle">CH₄: 96.2%</text>
  <text x="200" y="670" font-family="monospace" font-size="14" fill="#FF9800" text-anchor="middle">Temp: 35°C</text>

  <!-- Buttons -->
  <circle cx="130" cy="710" r="12" fill="#4CAF50"/>
  <circle cx="160" cy="710" r="12" fill="#FF5722"/>
  <circle cx="190" cy="710" r="12" fill="#2196F3"/>
  <circle cx="220" cy="710" r="12" fill="#FFC107"/>
  <circle cx="270" cy="710" r="12" fill="#9C27B0"/>

  <!-- Indian technician -->
  <circle cx="500" cy="620" r="40" fill="#D4A574"/>
  <rect x="475" y="645" width="50" height="100" fill="#FF6B35"/>
  <rect x="465" y="730" width="20" height="60" fill="#5D4037"/>
  <rect x="505" y="730" width="20" height="60" fill="#5D4037"/>

