  <rect x="525" y="670" width="40" height="12" fill="#D4A574"/>

  <!-- Quality check badge -->
  <circle cx="1000" cy="200" r="80" fill="#4CAF50" opacity="0.9"/>
  <text x="1000" y="190" font-family="Arial" font-size="20" fill="#fff" text-anchor="middle" font-weight="bold">Quality</text>
  <text x="1000" y="215" font-family="Arial" font-size="24" fill="#fff" text-anchor="middle" font-weight="bold">✓</text>
  <text x="1000" y="235" font-family="Arial" font-size="16" fill="#fff" text-anchor="middle">Certified</text>

