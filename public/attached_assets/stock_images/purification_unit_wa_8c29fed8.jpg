<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="1200" height="800" fill="#E1F5FE"/>

  <!-- Factory floor -->
  <rect x="0" y="500" width="1200" height="300" fill="#90A4AE"/>

  <!-- Factory walls -->
  <rect x="0" y="0" width="1200" height="500" fill="#B0BEC5"/>

  <!-- Large purification tanks -->
  <ellipse cx="300" cy="520" rx="120" ry="30" fill="#546E7A"/>
  <rect x="180" y="300" width="240" height="220" fill="#78909C"/>
  <ellipse cx="300" cy="300" rx="120" ry="30" fill="#90A4AE"/>
  <circle cx="300" cy="350" r="40" fill="#B0BEC5" stroke="#37474F" stroke-width="3"/>
  <text x="300" y="360" font-family="Arial" font-size="16" fill="#000" text-anchor="middle" font-weight="bold">CH₄</text>

  <ellipse cx="600" cy="520" rx="120" ry="30" fill="#546E7A"/>
  <rect x="480" y="300" width="240" height="220" fill="#78909C"/>
  <ellipse cx="600" cy="300" rx="120" ry="30" fill="#90A4AE"/>
