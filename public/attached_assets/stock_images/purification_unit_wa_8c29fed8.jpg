  <rect x="50" y="40" width="550" height="90" fill="rgba(255,255,255,0.9)" rx="10"/>
  <text x="325" y="80" font-family="Arial" font-size="26" fill="#1976D2" text-anchor="middle" font-weight="bold">Purification Unit - शुद्धिकरण इकाई</text>
  <text x="325" y="115" font-family="Arial" font-size="18" fill="#388E3C" text-anchor="middle">Gas Quality & Plant Operations</text>
